<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <template id="homepage" name="VON Home Page">
            <t t-call="von.layout">
                <link rel="preload" as="style" href="/von/static/geo/geo.css" onload="this.rel='stylesheet'"/>
                <link rel="preload" as="style" href="/von/static/geo/footer.css" onload="this.rel='stylesheet'"/>

                <style>
                    @keyframes spinner {
                      to {transform: rotate(360deg);}
                    }
                    body{
                        background-color: #eee;
                    }
                    #page_wait_spinner:before {
                      content: '';
                      box-sizing: border-box;
                      position: absolute;
                      top: 50%;
                      left: 50%;
                      width: 20px;
                      height: 20px;
                      margin-top: -10px;
                      margin-left: -10px;
                      border-radius: 50%;
                      border: 2px solid #ddd;
                      border-top-color: #000;
                      animation: spinner .6s linear infinite;
                    }
                    #wrapwrap{display:none;}
                </style>
                <div class="spinner" id="page_wait_spinner">
                </div>

                <div id="wrapwrap">
                    <t t-call="von.header"/>
                    <div class="homebg">
                        <div id="leftOverlay" class="leftOverlay" onclick="closeNav()" style="display: none;">
                        </div>
                        <div class="loader-geonews hide">
                            <div class="loader-inner">
                                <div class="logo-content">
                                </div>
                            </div>
                        </div>

                        <t t-call="von.side_nav"/>

                        <script type="text/javascript">
                            setTimeout(function () {
                                var element = document.getElementById("mySidenav");
                                element.style.removeProperty("display");
                            }, 4000);
                        </script>

                        <section class="home_s_top">
                            <div class="ad container">
                                <div class="ads lb">
                                    <div id="div-gpt-ad-1523347432315-4" style="height:auto; width:auto;" data-google-query-id="CJz02eiom_gCFYWFhQodWmsMpg">
                                        <div id="google_ads_iframe_/1063725/geo_eng_home_billboard_atf_0__container__" style="border: 0pt none;">
                                            <img src="https://tpc.googlesyndication.com/simgad/8575719920860005263" border="0" width="320" height="101" alt="" class="img_ad"/>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="container">

                                <div class="home_main_content">
                                    <div class="m_c_left" data-vr-zone="Home Featured Section">
                                        <ul>
                                            <li>
                                                <article>
                                                    <t t-set="blog_post" t-value="top_post"/>
                                                    <div class="m_pic bg_image_div">
                                                        <a data-event_action="featured" class="open-section" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                            <img class="lazyloaded" t-att-title="blog_post.name" t-att-alt="blog_post.name" t-att-src="blog_post.get_image_path()"/>
                                                        </a>
                                                        <t t-call="von.hover_social_share"/>
                                                    </div>

                                                    <div class="heading">
                                                        <a data-event_action="featured" class="open-section" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                            <h1 data-vr-headline=""><t t-esc="blog_post.name"/></h1>
                                                        </a>
                                                    </div>
                                                    <div class="m_except">
                                                        <p><t t-esc="blog_post.subtitle"/></p>
                                                    </div>
                                                </article>
                                            </li>

                                            <div class="top-ads-mob">

                                            </div>

                                            <t t-foreach="blogs1" t-as="blog_post">
                                                <li>
                                                    <article>
                                                        <div class="heading">
                                                            <a data-event_action="featured" class="open-section" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <h2 data-vr-headline=""><t t-esc="blog_post.name"/></h2>
                                                            </a>
                                                        </div>
                                                        <div class="m_pic bg_image_div">
                                                            <a data-event_action="featured" class="open-section" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <img class=" lazyloaded" t-att-title="blog_post.name" t-att-alt="blog_post.name" t-att-src="blog_post.get_image_path()"/>
                                                            </a>
                                                            <t t-call="von.hover_social_share"/>
                                                        </div>

                                                        <div class="m_except">
                                                            <p><t t-esc="blog_post.subtitle"/></p>
                                                        </div>
                                                    </article>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>

                                    <div class="m_c_right">
                                        <div class="home_title">Top Stories</div>
                                        <ul data-vr-zone="Home Top Stories Section">
                                            <t t-foreach="blogs2" t-as="blog_post">
                                                <li>
                                                    <article>
                                                        <a data-event_action="Top Story" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                        </a>
                                                        <div class="m_pic bg_image_div">
                                                            <a data-event_action="Top Story" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <picture>
                                                                    <source media="(max-width: 480px)" t-att-title="blog_post.name" t-att-alt="blog_post.name" t-att-srcset="blog_post.get_image_path()"/>
                                                                    <img class="lazyloaded" t-att-title="blog_post.name" t-att-alt="blog_post.name" t-att-src="blog_post.get_image_path()"/>
                                                                </picture>
                                                            </a>
                                                            <t t-call="von.hover_social_share"/>
                                                        </div>
                                                        <div class="heading">
                                                            <a data-event_action="Top Story" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <h2 data-vr-headline=""><t t-esc="blog_post.name"/></h2>
                                                            </a>
                                                        </div>
                                                    </article>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                </div>

                                <div class="home_sidebar">

                                    <div class="editors_pick" data-vr-zone="Home Editor's Pick Section">
                                        <div class="home_title">Editor's Picks</div>
                                        <ul>
                                            <t t-foreach="editor_blogs" t-as="blog_post">
                                                <li>
                                                    <div class="e_p_txt">
                                                        <h2 data-vr-headline="">
                                                            <a data-event_action="Editor's Pick" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <t t-esc="blog_post.name"/>
                                                            </a>
                                                        </h2>
                                                        <h3>
                                                            <a class="open-section" href="/writer/aadil-nakhoda">
                                                                <t t-esc="blog_post.author_id.name"/>
                                                            </a>
                                                        </h3>
                                                    </div>
                                                    <div class="e_p_img">
                                                        <img class="lazyloaded" t-att-title="blog_post.author_id.name" t-att-alt="blog_post.author_id.name" t-att-src="blog_post.get_author_image_path()"/>
                                                    </div>
                                                </li>
                                            </t>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </section>

                        <section class="abcd">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-12">
                                        <div class="border-top">
                                        </div>
                                    </div>
                                    <t t-foreach="hp_blog_types" t-as="blog">
                                        <div class="col-md-3 col-sm-6 col-ms-12">
                                            <div class="catPostHome" data-vr-zone="Home Category Pakistan Section">
                                                <div class="tittle-top">
                                                    <h2><a t-attf-href="/blog/#{slug(blog)}"><t t-esc="blog.name"/></a></h2>
                                                </div>

                                                <ul class="list">
                                                    <t t-set="blog_post" t-value="blog.top_post()"/>
                                                    <li class="border-box">
                                                        <div class="top-story-first">
                                                            <a data-event_action="Pakistan"
                                                               style="display: block;" class="open-section cat-open"
                                                               t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <img class=" lazyloaded" t-att-title="blog_post.name" t-att-alt="blog_post.name" t-att-src="blog_post.get_image_path()"/>
                                                            </a>
                                                            <div class="main-heading-top">
                                                                <h2 data-vr-headline="">
                                                                    <a data-event_action="Pakistan" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                        <t t-esc="blog_post.name"/>
                                                                    </a>
                                                                </h2>
                                                            </div>
                                                        </div>
                                                    </li>

                                                    <t t-foreach="blog.hp_posts()" t-as="blog_post">
                                                        <li class="border-box">
                                                            <a data-event_action="Pakistan" t-attf-href="/blog/#{slug(blog_post.blog_id)}/#{slug(blog_post)}" t-att-title="blog_post.name">
                                                                <t t-esc="blog_post.name"/>
                                                            </a>
                                                        </li>
                                                    </t>
                                                </ul>
                                            </div>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </section>

                        <footer>
                            <div class="container">
                                <div class="ftr_inr">
                                    <div class="ftr_col">
                                        <h1>Sections</h1>
                                        <ul>
                                            <li><a data-event_action="Home" data-page_type="Homepage" href="/">Home</a> </li>
                                            <li><a data-event_action="Latest" href="/blog">LATEST</a> </li>
                                            <t t-foreach="hp_blog_types" t-as="blog">
                                                <li><a t-attf-href="/blog/#{slug(blog)}"><t t-esc="blog.name"/></a></li>
                                            </t>
                                        </ul>
                                    </div>
                                    <div class="ftr_col">
                                        <ul style="margin-top: 32px;">
                                            <li><a data-event_action="TV SHOWS" href="/tv-shows">TV SHOWS</a> </li>
                                            <li><a data-event_action="VIDEOS" href="/videos">VIDEOS</a> </li>
                                            <li><a onclick="analyticsFunc(this)" data-page_type="Homepage" href="https://urdu.voiceofnews.com" target="_blank">URDU</a></li>
<!--                                            <h1>LIVE</h1>-->
<!--                                            <li><a data-event_action="live_tv" data-page_type="Homepage" href="https://live.von.com/" target="_blank">TV</a> </li>-->
<!--                                            <li><a data-event_action="radio" data-page_type="Homepage" href="https://live.von.com/radio.php" target="_blank">RADIO</a> </li>-->
                                            <li>
                                                <div class="fb-bot-btn">
                                                    <div class="fb-messengermessageus" id="fb-messengermessageus" messenger_app_id="1678638095724206" page_id="101059326616167" color="blue" size="large" style="height: 27px;">
                                                    </div>
                                                    <script> window.fbAsyncInit = function () {
                                                            FB.init({ appId: '1678638095724206', xfbml: true, version: 'v2.6' });
                                                        }</script>
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="copyright">
                                <p>Copyright Â© 2022. Geo Television Network. All Rights Reserved.</p>
                            </div>
                        </footer>
                    </div>
                    <span>
                        <script async="async" src="/von/static/geo/show_dom.js"/>
                        <script defer="defer" src="https://code.jquery.com/jquery-3.6.0.min.js"/>
                        <script defer="defer" src="/von/static/geo/geo.js"/>
                    </span>
                </div>
            </t>
        </template>

        <record id="home_page" model="website.page">
            <field name="name">VONHome</field>
            <field name="url">/</field>
            <field name="is_published">True</field>
            <field name="view_id" ref="von.homepage"/>
            <field name="website_id" ref="website.default_website"/>
            <field name="track">True</field>
        </record>

    </data>
</odoo>